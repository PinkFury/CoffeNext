
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<body>
    <center>
        <div class="container my-2">
            <div id="carouselExampleIndicators" data-interval="4200" class="carousel slide bg-light" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-90" src="@Url.Content("~/img/slider/1.jpg")" alt="Первый слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-90" src="@Url.Content("~/img/slider/2.jpg")" alt="Второй слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-90" src="@Url.Content("~/img/slider/3.jpg")" alt="Третий слайд">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" id="slider-arrows" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" id="slider-arrows" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="container my-2 bg-light">
                <img src="@Url.Content("~/img/banner.png")" class="bannerpicture">
                <img src="@Url.Content("~/img/Sticker.png")" class="sticker" width="120" height="120">
            </div>
        </div>
        <div class="container">
            <button type="button" class="close" aria-label="Close" id="closeJumb" onclick="closeJumb()">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="jumbotron" id="jumbo">
                <h1 class="display-4">Уважаемые посетители!</h1>
                <p class="lead">Теперь для большей выгоды в нашей кофейне существует балловая система, предоставляющая вам большие скидки!</p>
                <hr class="my-4">
                <p>Для доступа к акции необходимо зарегистрироваться и ознакомиться с системой баллов</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" id="btnjumbo" href="@Url.Content("~/Home/ScoreSystem")" role="button">Узнать больше</a>
                </p>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <img src="@Url.Content("~/img/ad/advertisement11.jpg")" class="img-fluid rounded mx-auto d-block">
                        </div>
                        <button type="button" id="adbtn" class="btn btn-primary btn-lg btn-block"><a href="@Url.Content("~/Home/Communicate")" id="adlink">Подробнее</a></button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <img src="@Url.Content("~/img/ad/ad12.jpg")" class="img-fluid rounded mx-auto d-block">
                        </div>
                        <button type="button" id="adbtn" class="btn btn-primary btn-lg btn-block"><a href="@Url.Content("~/Home/Adress")" id="adlink">Подробнее</a></button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <img src="@Url.Content("~/img/ad/ad1.jpg")" class="img-fluid rounded mx-auto d-block">
                        </div>
                        <button type="button" id="adbtn" class="btn btn-primary btn-lg btn-block"><a href="@Url.Content("~/Home/Adress")" id="adlink">Подробнее</a></button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <img src="@Url.Content("~/img/ad/ad111.jpg")" class="img-fluid rounded mx-auto d-block">
                        </div>
                        <button type="button" id="adbtn" class="btn btn-primary btn-lg btn-block"><a href="@Url.Content("~/Home/ScoreSystem")" id="adlink">Подробнее</a></button>
                    </div>
                </div>
            </div>
        </div>
    </center>
</body>

